<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#224380">

    <View
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/background" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select and Sign Up To Agency"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/role_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:entries="@array/roles_cdrmo_pnp_bfp_health_hospital"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerAssignedHospital"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:entries="@array/assigned_hospitals"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_municipality"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Assigned Municipality"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_contact_no"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="130dp"
        android:text="Sign Up"
        android:background="@drawable/button_background"
        android:backgroundTint="#deeaee"
        android:textColor="#000000"/>
</FrameLayout>