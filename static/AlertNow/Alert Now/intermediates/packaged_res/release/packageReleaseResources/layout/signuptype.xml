<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#224380">

    <!-- Overlay View -->
    <View
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/background"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#deeaee"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/alertNowLogo"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:text="Choose Account To Sign Up"
            android:textColor="#000000"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="190dp"
            android:gravity="center">

        <Button
            android:id="@+id/resident_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Resident/Barangay Official"

            android:background="@drawable/button_background"
            android:backgroundTint="#224380"
            android:textColor="#FFFFFF"

            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/cdrmo_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Agencies"
            android:background="@drawable/button_background"
            android:backgroundTint="#224380"
            android:textColor="#FFFFFF"
            />


        </LinearLayout>

    </LinearLayout>
</FrameLayout>
